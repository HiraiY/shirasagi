<% tabs = Gws::Affair::StaffCategory.site(@cur_site).order_by(order: 1) %>
<dl class="see">
  <dt><%= @model.t :code %><%= @model.tt :code %></dt>
  <dd><%= f.text_field :code %></dd>

  <dt><%= @model.t :name %><%= @model.tt :name %></dt>
  <dd><%= f.text_field :name %></dd>

  <dt><%= @model.t :order %><%= @model.tt :order %></dt>
  <dd><%= f.number_field :order %></dd>

  <dt><%= @model.t :staff_category_id %><%= @model.tt :staff_category_id %></dt>
  <dd><%= f.select :staff_category_id, tabs.map { |t| [t.name, t.id] }, include_blank: "" %></dd>
</dl>
