<dl class="see">
  <dt><%= @model.t :start_at %></dt>
  <dd><%= tryb { @item.start_end_term } %></dd>

  <dt><%= @model.t :leave_type %></dt>
  <% if @item.leave_type == "week_in_compensatory_leave" %>
    <dd><%= I18n.t("gws/affair.leave_type.week_in_compensatory_leave") %></dd>
  <% else %>
    <dd><%= @item.label :leave_type %></dd>
  <% end %>

  <% if @item.special_leave.present? %>
    <dt><%= @model.t :special_leave_id %></dt>
    <dd>
      <%= @item.special_leave.name %>
    </dd>
  <% end %>

  <% if @item.week_in_compensatory_file %>
    <dt><%= @model.t :week_in_compensatory_file_id %></dt>
    <dd><%= link_to @item.week_in_compensatory_file.term_label, gws_affair_overtime_file_path(site: @cur_site.id, id: @item.week_in_compensatory_file) %></dd>
  <% end %>

  <% if @item.week_out_compensatory_file %>
    <dt><%= @model.t :week_out_compensatory_file_id %></dt>
    <dd><%= link_to @item.week_out_compensatory_file.term_label, gws_affair_overtime_file_path(site: @cur_site.id, id: @item.week_out_compensatory_file) %></dd>
  <% end %>

  <dt><%= @model.t :reason %></dt>
  <dd><%=br @item.reason %></dd>
</dl>

<%= jquery do %>
  var highlighter = new Gws_Elasticsearch_Highlighter();
  highlighter.render();
<% end %>
