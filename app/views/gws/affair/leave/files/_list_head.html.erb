<div class="list-head">
  <label class="check"><input type="checkbox"/></label>

  <div class="list-head-action">
    <%= render file: "_list_head_tags" %>
    <div class="list-head-action-destroy">
      <button class="soft-destroy-all btn" data-ss-list-head-method="delete" data-ss-list-head-action="<%= url_for(action: :destroy_all) %>" data-ss-confirmation="<%= t('ss.confirm.delete') %>"><%= t :"ss.links.delete" %></button>
    </div>
  </div>

  <%= render file: "_search" %>
</div>
