<%
  if @items.blank?
    return t("gws/affair.notice.not_found_overtime_file")
  end
%>

<%= jquery do %>
  SS_SearchUI.modal();
<% end %>

<table class="index">
  <thead class="list-head">
    <tr>
      <% if @multi %>
      <th class="checkbox"><input type="checkbox" /></th>
      <% end %>
      <th class="name"><%= @model.t :overtime_name %></th>
      <th class="name"><%= @model.t :start_at %></th>
      <th class="name"><%= @model.t :end_at %></th>
      <th><%= @model.t :week_in_compensatory_minute %></th>
    </tr>
  </thead>
  <tbody class="items">
    <% @items.each do |item| %>
      <tr data-id="<%= item.id %>" class="list-item">
        <% if @multi %>
          <td class="checkbox">
            <input type="checkbox" name="ids[]" value="<%= item.id %>" />
          </td>
        <% end %>
        <td><%= link_to item.overtime_name, "#", class: @multi ? "select-item" : "select-single-item" %></td>
        <td><%= item.start_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= item.end_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= item.label :week_in_compensatory_minute %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @multi %>
<div class="search-ui-select">
  <%= button_tag t("ss.links.select"), { type: :button, class: "select-items btn" } %>
</div>
<% end %>

<%= paginate @items if @items.try(:current_page) %>
