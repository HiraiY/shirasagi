<dt><%= @model.t :affair_time %></dt>
<% if @item.affair_time_wday? %>
  <dd><%= "曜日毎" %></dd>
  <% (0..6).each do |wday| %>
    <dt class="depth-2"><%= t("date.day_names")[wday] %></dt>
    <dd class="depth-2">
      <%= @item.label "affair_start_at_hour_#{wday}" %>
      <%= @item.label "affair_start_at_minute_#{wday}" %>
      <%= t("ss.wave_dash") %>
      <%= @item.label "affair_end_at_hour_#{wday}" %>
      <%= @item.label "affair_end_at_minute_#{wday}" %>
    </dd>
  <% end %>
<% else %>
  <dd>
    <%= @item.label "affair_start_at_hour" %>
    <%= @item.label "affair_start_at_minute" %>
    <%= t("ss.wave_dash") %>
    <%= @item.label "affair_end_at_hour" %>
    <%= @item.label "affair_end_at_minute" %>
  </dd>
<% end %>

<dt><%= @model.t :attendance_time_changed_minute %></dt>
<dd><%= @item.attendance_time_changed_minute / 60 %> <%= t("datetime.prompts.hour") %></dd>

<dt><%= @model.t :overtime_in_work %></dt>
<dd><%= @item.label :overtime_in_work %></dd>

<dt><%= @model.t :affair_on_duty %></dt>
<dd></dd>

<dt class="depth-2"><%= @model.t :affair_on_duty_working_minute %></dt>
<dd class="depth-2"><%= @item.affair_on_duty_working_minute.try { |v| "#{v}#{t('datetime.prompts.minute')}" } %></dd>

<dt class="depth-2"><%= @model.t :affair_on_duty_break_minute %></dt>
<dd class="depth-2"><%= @item.affair_on_duty_break_minute.try { |v| "#{v}#{t('datetime.prompts.minute')}" } %></dd>

