<%= jquery do %> SS_AddonTabs.hide(".addon-gws-registration-group-setting"); <% end %>

<dl class="see addon-gws-registration-group-setting">
  <dt><%= @model.t :registration_sender_name %></dt>
  <dd><%= @item.registration_sender_name %></dd>

  <dt><%= @model.t :registration_sender_email %></dt>
  <dd><%= @item.registration_sender_email %></dd>

  <dt><%= @model.t :registration_sender_user_id %></dt>
  <dd><%= @item.registration_sender_user.try(:long_name) %></dd>

  <dt><%= @model.t :default_group_id %></dt>
  <dd><%= @item.default_group.name if @item.default_group.present?%></dd>

  <dt><%= @model.t :default_role_id %></dt>
  <dd><%= Gws::Role.site(@cur_site).where(_id: @item.default_role_id).first.name if @item.default_role_id.present? %></dd>
</dl>