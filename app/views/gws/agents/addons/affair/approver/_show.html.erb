<%
  @allowed_delegation ||= proc do |user|
    next true if @cur_user.gws_role_permit_any?(@cur_site, :delegate_all_gws_affair_overtime_files)

    next false unless @cur_user.gws_role_permit_any?(@cur_site, :delegate_private_gws_affair_overtime_files)
    next false unless user
    (@cur_user.groups.in_group(@cur_site).pluck(:id) & user.groups.in_group(@cur_site).pluck(:id)).present?
  end

  @workflow_js_options = {
    paths: {
      wizard: @item.workflow_wizard_path,
      pages: @item.workflow_pages_path
    }
  }
%>

