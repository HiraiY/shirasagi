<dl class="see">
  <dt><%= @model.t :duty_hour_ids %></dt>
  <dd>
    <% if @item.duty_hours.blank? %>
      <%= t("gws/affair.default_duty_hour") %>
    <% else %>
      <%= br @item.duty_hours.pluck(:name).join("\n") %>
    <% end %>
  </dd>
  <dd>
    <%= link_to t("gws/affair.links.manage_shifts"), "#", class: "btn btn-manage-shifts" %>
  </dd>
</dl>

<%= jquery do %>
  $(".btn-manage-shifts").on("click", function() {
    alert("シフト勤務の管理は開発中です。");
  });
<% end %>
