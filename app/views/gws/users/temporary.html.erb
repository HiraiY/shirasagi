<%= jquery do %>
  SS_Clipboard.renderCopy();
  $("div.list-head").remove();
  $("label.check").remove();
<% end %>

<% if @items.blank? %>
  <div class="index">
    <ul class="list_head">
      <%= I18n.t("gws.temporary.blank") %>
    </ul>
  </div>
<% else %>
  <% @index_meta = proc do |item| %>
    <% item.cur_site = @cur_site %>
    <%= gws_public_user_profile(item, :uid_or_id, :updated, :main_group_section_name, :user_title, :email, :tel) %>
    <% if item.temporary.present? %>
      <span class="temporary"><%= I18n.t("ss.options.user_temporary.#{item.temporary}") %></span>
    <% end %>
  <% end %>

  <%= render file: "gws/crud/index" %>
<% end %>
