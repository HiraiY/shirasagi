<% render_group = proc do |group, shows_content_if_could| %>
  <% post = @item.children.where(user_group_id: group.id).last %>
  <tr>
    <td class="state"><%= @item.answer_state_name(group) %></td>
    <td class="mark_at"><%= post && post.public? ? post.try(:created).strftime('%Y/%m/%d %H:%M') : '' %></td>
    <td class="udpate_at"><%= post && post.public? ? post.try(:updated).strftime('%Y/%m/%d %H:%M') : '' %></td>
    <td class="group"><%= group.name %></td>
    <td class="user"><%= post && post.public? ? post.try(:contributor_name) : '' %></td>
    <% if shows_content_if_could %>
      <td class="contents"><%= post && post.public? ? post.try(:text) : '' %></td>
      <td class="file">
        <% if post && post.public? && post.file_ids.present? %>
          <img src="/assets/img/gws/ic-file.png" alt="" /><%= post.file_ids.count %>
        <% else %>
          <%=  '' %>
        <% end %>
      </td>
    <% end %>
  </tr>
<% end %>

<%
  if params[:controller] =~ /admin/
    shows_content_if_could = true
  else
    shows_content_if_could = @item.spec_config != 'other_groups'
  end
%>

<article class="topic">
  <header>
    <h2><%= I18n.t('gws/monitor.topic.browsing_state') %></h2>
  </header>

  <div class="toggle-body">
    <div class="body">
      <table class="index">
        <thead>
        <tr>
          <th class="state"><%= I18n.t('gws/monitor.topic.type') %></th>
          <th class="mark_at"><%= I18n.t('gws/monitor.topic.mark_at') %></th>
          <th class="udpate_at"><%= I18n.t('gws/monitor.topic.update_at') %></th>
          <th class="group"><%= I18n.t('gws/monitor.topic.group') %></th>
          <th class="user"><%= I18n.t('gws/monitor.topic.user') %></th>
          <% if shows_content_if_could %>
            <th class="contents"><%= I18n.t('gws/monitor.topic.contents') %></th>
            <th class="file"><%= I18n.t('gws/monitor.topic.file') %></th>
          <% end %>
        </tr>
        </thead>
        <tbody>
        <% if @item.spec_config == 'my_group' %>
          <% attend_groups = @item.attend_groups.where(id: @cur_group.id) %>
        <% else %>
          <% attend_groups = @item.attend_groups %>
        <% end %>

        <% attend_groups.each do |group| %>
          <% render_group.call(group, shows_content_if_could) %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</article>
