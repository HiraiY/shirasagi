<div class="index">
  <div class="list-head">
    <%= render partial: "search" %>
  </div>

  <ul class="list-items">
    <% @items.each do |item| %>
    <li class="list-item">
      <nav class="tap-menu">
        <%= link_to t('ss.links.show'), action: :show, id: item %>
      </nav>
      <div class="info">
        <h3 class="title"><%= link_to "#{item.target_label} : #{item.action}", action: :show, id: item %></h3>
        <div class="meta">
          <span class="id">#<%= item.id %></span>
          <span class="datetime"><%= item.created.strftime("%Y/%m/%d %H:%M") %></span>
          <span class="filename"><%= item.url %></span>
          <span class="user"><%= item.user ? link_to(item.user_label, cms_user_path(@cur_site.id, item.user)) : item.user_id %></span>
          <% if item.session_id %>
          <span class="label"><%= @model.t :session_id %></span>
          <span class="session-id"><%= item.session_id %></span>
          <% end %>
          <% if item.request_id %>
          <span class="label"><%= @model.t :request_id %></span>
          <span class="session-id"><%= item.request_id %></span>
          <% end %>
          <% if item.page_url %>
            <span class="label"><%= @model.t :page_url %></span>
            <span class="session-id"><%= item.page_url %></span>
          <% end %>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</div>

<%= paginate @items if @items.try(:current_page) %>
